{
  "homepage": "https://upenr.vercel.app",
  "name": "upenr.vercel.app",
  "description": "A personal website.",
  "version": "0.0.1",
  "author": {
    "name": "Upendra Rajan",
    "email": "urajan@ncsu.edu",
    "url": "https://upenr.vercel.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/upenr/upendra-nextjs-website.git"
  },
  "scripts": {
    "predeploy": "rimraf .next/cache/next-babel-loader && next build",
    "deploy": "gh-pages -d build",
    "dev": "rimraf .next/cache/next-babel-loader && next dev",
    "build": "rimraf .next/cache/next-babel-loader && next build",
    "start": "next start",
    "export": "next export",
    "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,yml}\"",
    "postinstall": "patch-package"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,js,json,md,mdx,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@chakra-ui/core": "0.8.0",
    "@emotion/core": "10.0.35",
    "@emotion/styled": "10.0.27",
    "@mapbox/rehype-prism": "0.5.0",
    "@mdx-js/loader": "1.5.8",
    "@mdx-js/react": "1.5.8",
    "@next/mdx": "9.5.3",
    "babel-plugin-import-glob-array": "0.2.0",
    "big.js": "5.2.2",
    "comma-number": "2.0.1",
    "date-fns": "2.16.1",
    "emotion-theming": "10.0.27",
    "fathom-client": "3.0.0",
    "iframe-resizer-react": "^1.0.4",
    "mdx-prism": "0.3.1",
    "medium-to-markdown": "0.0.3",
    "next": "^10.0.1",
    "next-google-fonts": "1.2.1",
    "next-mdx-enhanced": "4.0.0",
    "next-seo": "4.7.3",
    "patch-package": "6.2.2",
    "postinstall-postinstall": "2.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-tweet-embed": "1.2.2",
    "reading-time": "1.2.0",
    "remark-autolink-headings": "6.0.1",
    "remark-capitalize": "1.1.0",
    "remark-code-titles": "0.1.1",
    "remark-slug": "6.0.0",
    "swr": "0.3.2",
    "unsplash-js": "6.0.0"
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "globby": "11.0.1",
    "prettier": "2.1.1",
    "rehype": "11.0.0",
    "rimraf": "^3.0.2"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
